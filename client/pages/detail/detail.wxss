/* pages/detail/detail.wxss */
.bg{
  background-color: #D53C3E;
  height: 40px;
  display: flex;
  flex-direction: row;
  position: fixed;
  bottom: 0;
  width: 100%;
}
.search{
  width: 80%;
  display: flex;
  flex-direction: row;
  border: 1px solid #cccccc;
  height: 25px;
  margin-right: 10px;
  background-color: #F6F5F3;
  border-radius: 5px;
  align-items: center;
  margin:5px;
}
.search image{
  margin-left: 10px;
}
.search input{
  margin-left: 10px;
  font-size: 13px;
}
.btn{
  margin:5px;
  height: 30px;
  display: flex;
  flex-direction: row;
}
.title{
  color: #444444;
  font-weight: bold;
  font-size: 18px;
  margin:10px;
}
.info{
display: flex;
flex-direction: row;
font-size: 12px;
color: #999999;
}
.desc{
width: 90%;
}
.comment{
  margin: 20px
}